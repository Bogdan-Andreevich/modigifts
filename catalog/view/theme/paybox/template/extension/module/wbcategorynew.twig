<div class="container martb">
    <div class="homecategory">
    <h1 class="heading text-left"><span>{{ cheading_title }}</span></h1>
    <div class="row rless">
        <div id="cat-img" class="owl-carousel owl-theme">
            {% for category in categories %}
                {% if category.category_id == category_id %}
                    <div class="block-cat-wr col-xs-12 cless">
                        <div class="categorybr">
                        <a href="{{ category.href }}">
                            <div class="">
                                {% if category.image_name %}
                                    <img src="{{ category.image_name }}" class="img-responsive" alt="">
                                {% else %}
                                    <img src="image/no_image.png" class="img-responsive" alt="">
                                {% endif %}
                            </div>
                            <div class="catcontent text-center">
                                <h2><span>{{ category.name }}</span></h2>
                                <!-- <h6 class="catepro">{{category.totalp}} {{catepro}}</h6>
                                <h4>view all <i class="fa fa-arrow-right"></i></h4> -->
                            </div>
                        </a>
                        </div>
                    </div>
                {% else %}
                    <div class="block-cat-wr col-xs-12 cless">
                        <div class="categorybr">
                        <a href="{{ category.href }}">
                            <div class="cateimg">
                                {% if category.image_name %}
                                   <img src="{{ category.image_name }}" class="img-responsive center-block" alt="">
                                {% else %}
                                    <img src="image/no_image.png" class="img-responsive center-block" alt="">
                                {% endif %}
                            </div>

                            <div class="catcontent text-center">
                                <h2><span>{{ category.name }}</span></h2>
                                <!-- <h6 class="catepro">{{category.totalp}} {{catepro}}</h6>
                                <h4>view all <svg width="12px" height="12px"><use xlink:href="#rarrow"></use></svg></h4> -->
                            </div>
                        </a>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>  
    </div>   
    </div>
</div>

<script type="text/javascript">
 $(document).ready(function() {
    $("#cat-img").owlCarousel({
    itemsCustom : [
    [0, 1],
    [320, 2],
    [400, 3],
    [600, 4],
    [768, 5],
    [992, 6],
    [1200, 7],
    [1410, 8]
    ],
      // autoPlay: 6000,
      navigationText: ['<i class="fa fa-angle-left"></i>', '<i class="fa fa-angle-right"></i>'],
      navigation : true,
      pagination:false
    });
});
</script>