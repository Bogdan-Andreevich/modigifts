{{ header }}{{ column_left }}
<div id="content">
<div class="container-fluid">
    <div class="page-header">
        <div class="container">
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                {% if error %}
                    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error }}</div>
                {% endif %}
                <form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal">
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-text">{{ entry_text }}</label>
                        <div class="col-sm-10">
                            <textarea name="text" rows="5" id="input-text" class="form-control">{{ text }}</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> {{ button_save }}</button>
                            <a href="{{ cancel }}" class="btn btn-default"><i class="fa fa-reply"></i> {{ button_cancel }}</a></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
{{ footer }}